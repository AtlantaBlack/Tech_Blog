{{! cards for each blog post }}
<div class="container card border-blue">
	{{! link to the post id }}
	<a href="/post/{{id}}">
		<div class="row card-header bottom-accent">
			{{! post title }}
			<div class="two-thirds column border-greenyellow">
				<h5 class="post-title">{{post_title}}</h5>
			</div>
			{{! post author }}
			<div class="one-third column border-orange">
				<h6 class="post-author">posted by
					{{user.username}}
					on
					{{format_date date_created}}</h6>
			</div>
		</div>
		{{! post content }}
		<div class="row">
			<div class="twelve columns">
				<p>{{post_content}}</p>

				{{! partial variable passing tests }}
				{{!-- session:host
				<p>{{session_host}}</p>
				<p>{{user_id}}</p> --}}


		</div>
	</a>			
  
  	{{#if_content_author session_host user_id}}
					<div class="u-pull-right border-blue">
						<a href="/update/{{id}}" class="button">Update Post</a>

						<a href="/delete/{{id}}" class="button">Delete Post</a>
					</div>
				{{else}}
					<p>blah blah</p>
				{{/if_content_author}}
			</div>
</div>

