{{#each postComments as |comment|}}
<div class="container card border-blue">
  <div class="row border-red">
    <div class="twelve columns">
      <p class="comment-title">Comment by {{comment.user.username}} on {{format_date comment.date_created}}</p>
      <p>{{comment.commentContent}}</p>
    </div>
  </div>
</div>
{{/each}}