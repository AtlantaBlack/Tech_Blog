{{#each postComments as |comment|}}
	<div class="container card border-blue">
		<div class="row border-red">
			<div class="twelve columns">
				<p class="comment-title">Comment by
					{{comment.user.username}}
					on
					{{format_date comment.date_created}}</p>
				<p>{{comment.comment_content}}</p>

				{{#if logged_in}}

					<a href="/update/{{id}}" class="button">Update Post</a>

					<a href="/delete/{{id}}" class="button">Delete Post</a>

				{{/if}}

			</div>
		</div>
	</div>
{{/each}}