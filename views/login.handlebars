<div class="container">
	<div class="row">
		<div class="twelve columns">
			<h2 class="bottom-accent">Login</h2>
			<p>If you have an existing account, please log in with your email address.</p>
			<form id="login-form">
				<label for="email-login">Email:</label>
				<input
					type="text"
					id="email-login"
					class="u-full-width"
					placeholder="user@email.com"
				/>

				<label for="password-login">Password:</label>
				<input
					type="password"
					id="password-login"
					class="u-full-width"
					placeholder="******"
				/>

				<button class="button-primary" type="submit">Login</button>

				<a href="/signup">New? Sign up here.</a>
			</form>

		</div>
	</div>
</div>

<script src="/js/login.js"></script>