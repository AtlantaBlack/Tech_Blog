{{!-- if logged in --}}
<div class="container">
  {{!-- welcome msg --}}
  <div class="row">
    <div class="twelve columns">
      <h3>Welcome back, {{username}}!</h3>
    </div>
  </div>
</div>

{{!-- create new blog post --}}
<div class="container">
  <div class="row">
    <div class="twelve columns">
      <h4>Create a new blog post:</h4>
      {{!-- form --}}
      <form id="new-post-form">
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" class="u-full-width">

        <label for="post-content">Content:</label>
        <textarea id="post-content" class="u-full-width"></textarea>

        <button class="button-primary" type="submit">Post</button>
      </form>
    </div>
  </div>
</div>


{{!-- if there are blog posts --}}
{{#if posts.length}}
<div class="container">
  <div class="row">
    <div class="twelve columns">
      <h4>Previous posts:</h4>
    </div>
  </div>
</div>
{{!-- show all the user's posts here --}}
{{#each posts as |post|}}
{{> dash-post-details}}
{{/each}}
{{/if}}

<script src="/js/dashboard.js"></script>